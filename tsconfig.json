{
    "compilerOptions": {
        "target": "esNext",
        "module": "nodeNext",
        "strict": true,
        "noEmit": true,
        "isolatedModules": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "jsx": "react",
        "sourceMap": true,
        "moduleResolution": "nodeNext",
        "resolveJsonModule": true,
        "plugins": [{"name": "typescript-plugin-css-modules"}]
    },
    "include": ["./src/**/*"]
}